<h1>Edit List</h1>

<div class="row">
  <div class="col-md-4">
    <p>Guidelines for lists</p>
    <ul>
      <li>Please add your task items</li>
      <li>Complete your tasks</li>
      <li>Delete your tasks</li>
    </ul>
  </div>

  <div class="col-md-8">
    <%= form_for @list do |f| %>
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control', placeholder: "Enter list title" %>
      </div>
      <div class="form-group">
        <%= f.submit "Save", class: 'btn-btn-success' %>
      </div>
    <% end %>
  </div>
</div>
