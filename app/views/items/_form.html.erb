<h4>Add Item:</h4>
<% if current_user %>
  <div class="col-md-8">
    <%= form_for [ list, Item.new ] do |f| %>
      <div class="form-group">
        <%= f.text_field :body, class: 'form-control', placeholder: "Enter todo item" %>
        <%= f.submit "Create", class: 'btn-btn-success' %>
      </div>
    <% end %>
  </div>
<% end %>